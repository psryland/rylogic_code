<?xml version="1.0" encoding="utf-8"?>
<!--
This targets file is used in the nuget package to add these native
dlls to the target project. Links to the native dlls are added as
copy-if-newer content to the project which copies them to the build
target directory.
-->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<!-- Add a dependency on the dll -->
	<ItemGroup>
		<CustomBuild Include="$(RylogicRoot)lib\x64\debug\view3d-12.dll">
			<Message />
			<FileType>Document</FileType>
			<Link>$(RylogicRoot)lib\x64\debug\view3d-12.dll</Link>
			<Outputs>$(OutDir)lib\x64\debug\view3d-12.dll</Outputs>
			<Command Condition="'$(Configuration)'=='Debug'">copy $(RylogicRoot)lib\x64\debug\view3d-12.dll $(OutDir)lib\x64\debug\view3d-12.dll</Command>
		</CustomBuild>
		<CustomBuild Include="$(RylogicRoot)lib\x64\release\view3d-12.dll">
			<Message />
			<FileType>Document</FileType>
			<Link>$(RylogicRoot)lib\x64\release\view3d-12.dll</Link>
			<Outputs>$(OutDir)lib\x64\release\view3d-12.dll</Outputs>
			<Command Condition="'$(Configuration)'!='Debug'">copy $(RylogicRoot)lib\x64\release\view3d-12.dll $(OutDir)lib\x64\release\view3d-12.dll</Command>
		</CustomBuild>
	</ItemGroup>

</Project>