<?xml version="1.0" encoding="utf-8"?>
<!--
This targets file copies the imgui DLL to the output directory.
Links to the native dlls are added as copy-if-newer content to
the project which copies them to the build target directory.
-->
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<!-- Add a dependency on the dll (C#) -->
	<ItemGroup Condition="'$(MSBuildProjectExtension)' == '.csproj'">
		<Content Include="$(RylogicRoot)lib\x64\debug\imgui.dll">
			<Link>lib\x64\debug\imgui.dll</Link>
			<CopyToOutputDirectory Condition="'$(Configuration)'=='Debug'">PreserveNewest</CopyToOutputDirectory>
		</Content>

		<Content Include="$(RylogicRoot)lib\x64\release\imgui.dll">
			<Link>lib\x64\release\imgui.dll</Link>
			<CopyToOutputDirectory Condition="'$(Configuration)'!='Debug'">PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<!-- Add a dependency on the dll (C++) -->
	<ItemGroup Condition="'$(MSBuildProjectExtension)' == '.vcxproj'">
		<DependencyLink Include="$(RylogicRoot)lib\$(Platform)\$(Configuration)\imgui.dll" />
	</ItemGroup>

</Project>
