<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<ItemGroup>
		<PropertyPageSchema Include="$(MSBuildThisFileDirectory)$(MSBuildThisFileName).xml"/>
		<AvailableItemName Include="DependencyLink">
			<Targets>DependencyLinkTarget</Targets>
		</AvailableItemName>
	</ItemGroup>

	<!-- Custom Target for Building Shaders -->  
	<Target
		Name="DependencyLinkTarget"
		AfterTargets="Link"
		Inputs="@(DependencyLink)"
		Outputs="@(DependencyLink->'$(OutDir)lib\$(Platform)\$(Configuration)\%(Filename)%(Extension)')"
	>
		<Copy
			SourceFiles="@(DependencyLink)"
			DestinationFolder="@(DependencyLink->'$(OutDir)lib\$(Platform)\$(Configuration)\')"
			SkipUnchangedFiles="true"
			Condition="exists('@(DependencyLink)')"
			ContinueOnError="ErrorAndContinue"
		/>
		<!--
		<MakeDir
			Directories="@(DependencyLink->'$(OutDir)lib\$(Platform)\$(Configuration)\')"
		/>
		<Exec
			Command="copy @(DependencyLink) @(DependencyLink->'$(OutDir)lib\$(Platform)\$(Configuration)\%(Filename)%(Extension)')"
			Condition="exists('@(DependencyLink)')"
			ContinueOnError="ErrorAndContinue"
		/>
		-->
	</Target>

	<!-- Hook the custom target into the build pipeline -->  
	<PropertyGroup>
		<BuildDependsOn>$(BuildDependsOn);DependencyLinkTarget</BuildDependsOn>
	</PropertyGroup>

</Project>