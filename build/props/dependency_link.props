<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<ItemGroup>
		<PropertyPageSchema Include="$(MSBuildThisFileDirectory)$(MSBuildThisFileName).xml"/>
		<AvailableItemName Include="DependencyLink">
			<Targets>DependencyLinkTarget</Targets>
		</AvailableItemName>
	</ItemGroup>

	<!-- Define the DependencyLink item type defaults -->
	<ItemDefinitionGroup>
		<DependencyLink>
			<OutDir>$(OutDir)lib\$(Platform)\$(Configuration)\</OutDir>
		</DependencyLink>
	</ItemDefinitionGroup>

	<!-- Custom Target for DLL Dependencies -->
	<Target
		Name="DependencyLinkTarget"
		AfterTargets="Link"
		Inputs="@(DependencyLink);$(MSBuildThisFileFullPath)"
		Outputs="@(DependencyLink->'%(OutDir)%(Filename)%(Extension)')"
	>
		<!--
		Inputs="%(DependencyLink.FullPath)"
		Outputs="@(DependencyLink->'%(DependencyLink.OutDir)%(Filename)%(Extension)')"
		Outputs="@(DependencyLink->'$(OutDir)lib\$(Platform)\$(Configuration)\%(Filename)%(Extension)')"
		Returns="%(DependencyLink.OutDir)%(Filename)%(Extension)"
		<Message Importance="high" Text="OUTPUTS = %(DependencyLink.OutDir)%(Filename)%(Extension)" />
		<Message Importance="high" Text="INPUTS = @(DependencyLink);$(MSBuildThisFileFullPath)" />
		<Message Importance="high" Text="OUTPUTS = @(DependencyLink->'%(OutDir)%(Filename)%(Extension)')" />
		%(DependencyLink.OutDir)
		Condition="exists('@(DependencyLink)')"
		-->
		<Message Importance="high" Text="@(DependencyLink) --> @(DependencyLink->'%(OutDir)%(Filename)%(Extension)')" />
		<Copy
			SourceFiles="@(DependencyLink)"
			DestinationFolder="@(DependencyLink->'%(OutDir)')"
			ContinueOnError="ErrorAndContinue"
			SkipUnchangedFiles="false"
		/>
	</Target>

	<!-- Hook the custom target into the build pipeline -->  
	<PropertyGroup>
		<BuildDependsOn>$(BuildDependsOn);DependencyLinkTarget</BuildDependsOn>
	</PropertyGroup>

</Project>