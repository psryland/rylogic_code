{
  "name": "ldraw-script",
  "displayName": "LDraw Script",
  "description": "Language support for LDraw Script with IntelliSense auto-completion",
  "version": "1.1.0",
  "publisher": "Rylogic",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ldr"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ldr",
        "aliases": [
          "LDraw Script",
          "ldr"
        ],
        "extensions": [
          ".ldr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ldr",
        "scopeName": "source.ldr",
        "path": "./syntaxes/ldr.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/psryland/rylogic_code.git"
  },
  "scripts": {
    "parse-templates": "npx ts-node scripts/parse-templates.ts",
    "compile": "tsc -p ./",
    "build": "npm run parse-templates && npm run compile",
    "watch": "tsc -watch -p ./",
    "package": "npm run build && npx vsce package --out publish/ldraw-script.vsix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.97.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
