<Window
	x:Class="LDraw.Dialogs.SettingsUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
	mc:Ignorable="d"
	Title="Preferences"
	WindowStartupLocation="CenterOwner"
	ShowInTaskbar="True"
	ResizeMode="CanResizeWithGrip"
	Height="450"
	Width="500"
	>
	<Grid
		Margin="8,0,8,8"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Profile -->
		<StackPanel
			Grid.Row="0"
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			Margin="16,16,16,0"
			>
			<TextBlock
				Text="Profile: "
				VerticalAlignment="Center"
				Margin="3"
				/>
			<ComboBox
				ItemsSource="{Binding Profiles}"
				SelectedItem="{Binding Profiles/, Mode=TwoWay}"
				IsSynchronizedWithCurrentItem="True"
				DisplayMemberPath="Name"
				VerticalAlignment="Center"
				MinWidth="180"
				Margin="3"
				/>
			<Button
				Command="{Binding SaveProfile}"
				VerticalAlignment="Center"
				Background="Transparent"
				BorderThickness="0"
				MaxHeight="28"
				Margin="6,0,0,0"
				>
				<Image
					Source="{StaticResource save}"
					RenderOptions.BitmapScalingMode="HighQuality"
					/>
			</Button>
			<Button
				Command="{Binding DeleteProfile}"
				IsEnabled="{Binding DeleteProfile.Available}"
				VerticalAlignment="Center"
				Background="Transparent"
				BorderThickness="0"
				MaxHeight="32"
				Margin="6,0,0,0"
				>
				<Image
					Source="{StaticResource bin}"
					RenderOptions.BitmapScalingMode="HighQuality"
					/>
			</Button>
		</StackPanel>
		
		<!-- Profile settings -->
		<TabControl
			Grid.Row="1"
			Margin="8,8,8,8"
			>
			
			<!-- General -->
			<TabItem
				Header="General"
				>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<!-- Font -->
					<StackPanel
						Orientation="Horizontal"
						Margin="8"
						>
						<TextBlock
							Text="Script UI Font: "
							VerticalAlignment="Center"
							Margin="3"
							/>
						<ComboBox
							MinWidth="100"
							ItemsSource="{Binding AvailableFonts}"
							Text="{Binding Profile.FontName}"
							Margin="3"
							/>
						<TextBlock
							Text="Size: "
							VerticalAlignment="Center"
							Margin="3"
							/>
						<TextBox
							Text="{Binding Profile.FontSize}"
							VerticalAlignment="Center"
							HorizontalContentAlignment="Center"
							MinWidth="30"
							Margin="3"
							/>
					</StackPanel>

					<!-- Include Paths -->
					<GroupBox
						Grid.Row="1"
						Header="Include Paths:"
						>
						<DockPanel
							>
							<!-- Modify buttons -->
							<StackPanel
								DockPanel.Dock="Right"
								MaxWidth="28"
								>
								<Button
									Command="{Binding MoveIncludePathUp}"
									CommandParameter="{Binding SelectedIndex, ElementName=m_lb_include_paths}"
									IsEnabled="{Binding MoveIncludePathUp.Available}"
									Background="Transparent"
									BorderThickness="0"
									Margin="2"
									>
									<Image
										Source="{StaticResource green_up}"
										RenderOptions.BitmapScalingMode="HighQuality"
										/>
								</Button>
								<Button
									Command="{Binding MoveIncludePathDown}"
									CommandParameter="{Binding SelectedIndex, ElementName=m_lb_include_paths}"
									IsEnabled="{Binding MoveIncludePathDown.Available}"
									Background="Transparent"
									BorderThickness="0"
									Margin="2"
									>
									<Image
										Source="{StaticResource green_down}"
										RenderOptions.BitmapScalingMode="HighQuality"
										/>
								</Button>
								<Button
									Command="{Binding RemoveIncludePath}"
									CommandParameter="{Binding SelectedValue, ElementName=m_lb_include_paths}"
									IsEnabled="{Binding RemoveIncludePath.Available}"
									Background="Transparent"
									BorderThickness="0"
									Margin="2"
									>
									<Image
										Source="{StaticResource reject}"
										RenderOptions.BitmapScalingMode="HighQuality"
										/>
								</Button>
								<Button
									Command="{Binding AddIncludePath}"
									IsEnabled="{Binding AddIncludePath.Available}"
									Background="Transparent"
									BorderThickness="0"
									Margin="2"
									>
									<Image
										Source="{StaticResource add}"
										RenderOptions.BitmapScalingMode="HighQuality"
										/>
								</Button>
							</StackPanel>

							<!-- Paths List -->
							<ListBox
								ItemsSource="{Binding Profile.IncludePaths}"
								MinHeight="100"
								Name="m_lb_include_paths"
								/>

						</DockPanel>
					</GroupBox>
				</Grid>
			</TabItem>

			<!-- Scene -->
			<TabItem
				Header="Scene"
				>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					
					<!-- Reset/Reload -->
					<GroupBox
						Grid.Row="0"
						Header="Refresh / Reload"
						Padding="3"
						>
						<StackPanel>
							<CheckBox
								Content="Clear the Log window on reload"
								IsChecked="{Binding Profile.ClearErrorLogOnReload}"
								Margin="3"
								/>
							<CheckBox
								Content="Reset the camera position on reload"
								IsChecked="{Binding Profile.ResetOnLoad}"
								Margin="3"
								/>
							<CheckBox
								Content="Automatically reload files when changes are detected"
								IsChecked="{Binding Profile.AutoRefresh}"
								Margin="3"
								/>
							<StackPanel
								Orientation="Horizontal"
								Margin="30,0,3,0"
								>
								<TextBlock
									Text="Detect changed files polling interval (sec): "
									VerticalAlignment="Center"
									/>
								<TextBox
									Text="{Binding Profile.CheckForChangesPollPeriodS, StringFormat={}{0:N2}}"
									VerticalAlignment="Center"
									MinWidth="50"
									/>
							</StackPanel>
						</StackPanel>
					</GroupBox>
				</Grid>
			</TabItem>

			<!-- Streaming -->
			<TabItem
				Header="Streaming"
			>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<GroupBox
						Grid.Row="0"
						Header="Connections"
						Padding="3"
					>
						<!-- Streaming Port -->
						<StackPanel
							Orientation="Horizontal"
							Margin="8"
						>
							<TextBlock
								Text="Streaming Port: "
								VerticalAlignment="Center"
							/>
							<TextBox
								Text="{Binding Profile.StreamingPort}"
								VerticalAlignment="Center"
								MinWidth="50"
							/>
						</StackPanel>
					</GroupBox>
				</Grid>
			</TabItem>
		</TabControl>

		<!-- Buttons -->
		<Grid
			Grid.Row="2"
			MinHeight="28"
			Margin="8"
			>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			
			<Button
				Grid.Column="0"
				Command="{Binding ResetToDefaults}"
				Content="Reset to Defaults"
				MinWidth="120"
				Margin="3"
				/>
			<Button
				Grid.Column="3"
				Command="{Binding Accept}"
				Content="OK"
				MinWidth="80"
				Margin="3"
				/>
		</Grid>
	</Grid>
</Window>
