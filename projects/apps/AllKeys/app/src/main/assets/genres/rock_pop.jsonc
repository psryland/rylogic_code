	// Walking Bass patterns
	//  Format: <c|n|_>[bs]<scale-degree>:<note-length>:<velocity>
	//  Rock/pop bass is root-heavy with octaves and fifths, straight timing
	"walks": {
		"1-beat": [
			["c1:100:80"]
		],
		"2-beat": [
			["c1:100:80", "c1:100:70"],
			["c1:100:80", "c5:100:70"],
			["c1:100:80", "c8:100:70"],
			["c8:100:80", "c5:100:70"],
			["c1:100:80", "c-4:100:70"],
			["c1:100:80", "nb2:100:70"]
		],
		"3-beat": [
			["c1:100:80", "c1:100:70", "c5:100:70"],
			["c1:100:80", "c5:100:70", "c8:100:70"],
			["c1:100:80", "c8:100:70", "c5:100:70"],
			["c1:100:80", "c5:100:70", "c-4:100:70"],
			["c1:100:80", "c1:100:70", "nb2:100:70"]
		],
		"4-beat": [
			["c1:100:80", "c1:100:70", "c5:100:70", "c5:100:70"],
			["c1:100:80", "c5:100:70", "c8:100:70", "c5:100:70"],
			["c1:100:80", "c3:100:70", "c5:100:70", "c8:100:70"],
			["c1:100:80", "c8:100:70", "c5:100:70", "c3:100:70"],
			["c1:100:80", "c1:100:70", "c5:100:70", "nb2:100:80"],
			["c1:100:80", "c5:100:70", "c1:100:70", "c-4:100:70"],
			["c8:100:80", "c5:100:70", "c3:100:70", "c5:100:70"],
			["c1:100:80", "c5:100:70", "c8:100:70", "nb2:100:80"]
		]
	},

	// Comping rhythms
	//  Format: <c|_>:<chord-length>:<velocity>
	//  Rock/pop comping is straight and downbeat-heavy
	"vamps": {
		"1-beat": [
			["c:100:60"]
		],
		"2-beat": [
			["c:200:60"],
			["c:100:60", "c:100:50"],
			["c:100:60", "_:100:00"],
			["_:100:00", "c:100:50"]
		],
		"3-beat": [
			["c:300:60"],
			["c:100:60", "c:100:50", "c:100:50"],
			["c:100:60", "_:100:00", "c:100:50"],
			["c:200:60", "c:100:50"]
		],
		"4-beat": [
			["c:400:60"],
			["c:100:60", "_:100:00", "c:100:50", "_:100:00"],
			["c:100:60", "c:100:50", "c:100:50", "c:100:50"],
			["c:200:60", "c:100:50", "c:100:50"],
			["c:100:60", "_:100:00", "c:200:50"],
			["c:100:60", "c:100:50", "_:100:00", "c:100:50"]
		]
	},

	// Drum patterns
	"rhythms": [
		{
			"name": "Basic Rock",
			"midi": "rhythms/rock0.mid",
			"beats-per-bar": 4,
			"number-of-bars": 4,
			"swing": false
		}
	]
}
