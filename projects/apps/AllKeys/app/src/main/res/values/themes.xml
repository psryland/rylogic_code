<resources>
    <!-- Base application theme. -->
    <style name="Theme.AllKeys" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:color">@color/primary</item>
        <item name="android:colorAccent">@color/primary_variant</item>
        <item name="android:textColor">@color/text_color</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>

        <item name="android:statusBarColor">@color/status_bar_background</item>
        <item name="android:toolbarStyle">@style/Theme.AllKeys.ToolbarStyle</item>
        <item name="alertDialogTheme">@style/Theme.AllKeys.Dialog</item>
    </style>

    <!-- Custom toolbar style -->
    <style name="Theme.AllKeys.ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Custom dialog theme -->
    <style name="Theme.AllKeys.Dialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/primary_variant</item>
        <item name="colorSecondary">@color/primary_variant</item>
    </style>

</resources>