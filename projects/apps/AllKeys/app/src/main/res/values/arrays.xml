        <item>+:0,2,4,5,7,8,11</item> <!-- Harmonic Major -->
        <item>+7:0,1,3,4,6,8,10</item> <!-- X+b2 melodic minor -->
        <item>sus:0,2,4,5,7,9,10</item> <!-- Mixolydian -->
        <item>mΔ7:0,2,3,5,7,8,11</item> <!-- Harmonic Minor -->
    </string-array>

