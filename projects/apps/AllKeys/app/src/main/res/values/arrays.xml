    <!-- Convert chords to scales-->
    <string-array name="scales">
        <item>Δ7:0,2,4,5,7,9,11</item> <!-- Ionian -->
        <item>7:0,2,4,5,7,9,10</item> <!-- Mixolydian -->
        <item>m6:0,2,3,5,7,9,11</item> <!-- Melodic Minor -->
