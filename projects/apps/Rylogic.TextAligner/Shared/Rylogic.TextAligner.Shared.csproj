<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>net481</TargetFrameworks>
    <RootNamespace>Rylogic.TextAligner.Shared</RootNamespace>
    <AssemblyName>Rylogic.TextAligner.Shared</AssemblyName>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <!-- Assembly properties -->
  <PropertyGroup>
    <Description>Text aligning extension for Visual Studio by Rylogic</Description>
    <Version>1.12.0</Version>
  </PropertyGroup>

  <!-- References -->
  <ItemGroup>
    <Reference Include="WindowsFormsIntegration" />
    <PackageReference Include="MessagePack" />
    <PackageReference Include="Microsoft.VisualStudio.SDK" />
    <ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Core\Rylogic.Core.csproj" />
    <ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Gui.WPF\Rylogic.Gui.WPF.csproj" />
  </ItemGroup>

</Project>