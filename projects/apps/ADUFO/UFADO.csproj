<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
	<OutputType>WinExe</OutputType>
	<TargetFramework>net6.0-windows</TargetFramework>
	<RootNamespace>UFADO</RootNamespace>
	<AssemblyName>UFADO</AssemblyName>
	<LangVersion>latest</LangVersion>
	<Nullable>enable</Nullable>
	<UseWPF>true</UseWPF>
	</PropertyGroup>

	<!-- Assembly properties -->
	<PropertyGroup>
		<Authors>P Ryland</Authors>
		<Company>Rylogic</Company>
		<Description>Unorganised floating Azure DevOps</Description>
		<Copyright>Copyright (c) Rylogic 2023</Copyright>
		<PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
		<ApplicationIcon>icon.ico</ApplicationIcon>
		<Version>0.0.1</Version>
		<FileVersion>0.0.1</FileVersion>
		<AssemblyVersion>0.0.1</AssemblyVersion>
	</PropertyGroup>

	<!-- Code -->
	<ItemGroup>
		<ApplicationDefinition Include="src\App.xaml" />
	</ItemGroup>

	<!-- Resources -->
	<ItemGroup>
		<Resource Include="res\*.png" />
	</ItemGroup>

	<!-- References -->
	<ItemGroup>
		<ProjectReference Include="..\..\rylogic\Rylogic.Core\Rylogic.Core.csproj" />
		<ProjectReference Include="..\..\rylogic\Rylogic.Gui.WPF\Rylogic.Gui.WPF.csproj" />
		<ProjectReference Include="..\..\rylogic\Rylogic.View3d\Rylogic.View3d.csproj" />
	</ItemGroup>

	<!-- Packages -->
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="7.0.5" />
		<PackageReference Include="Microsoft.TeamFoundationServer.Client" Version="16.205.1" />
		<PackageReference Include="Microsoft.VisualStudio.Services.Client" Version="16.205.1" />
		<PackageReference Include="Microsoft.VisualStudio.Services.InteractiveClient" Version="16.205.1" />
	</ItemGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<Content Include="..\..\..\lib\x64\debug\view3d.dll">
			<Link>lib\x64\debug\view3d.dll</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="..\..\..\lib\x64\release\view3d.dll">
			<Link>lib\x64\release\view3d.dll</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<!--
		<Content Include="..\..\..\lib\x86\debug\view3d.dll">
			<Link>lib\x86\debug\view3d.dll</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="..\..\..\lib\x86\release\view3d.dll">
			<Link>lib\x86\release\view3d.dll</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		-->
	</ItemGroup>

</Project>
