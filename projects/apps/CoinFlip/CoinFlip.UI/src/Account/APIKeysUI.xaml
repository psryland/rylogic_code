<Window
	x:Class="CoinFlip.UI.APIKeysUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:CoinFlip.UI"
	mc:Ignorable="d"
	WindowStartupLocation="CenterOwner"
	ShowInTaskbar="False"
	Width="400"
	Height="300"
	>
	<DockPanel>

		<!-- Buttons -->
		<StackPanel
			DockPanel.Dock="Bottom"
			Orientation="Horizontal"
			HorizontalAlignment="Right"
			>
			<Button Content="OK" MinWidth="80" Margin="16,16,8,16" Padding="3" IsDefault="True" Click="HandleOk"/>
			<Button Content="Cancel" MinWidth="80" Margin="8,16,16,16" Padding="3" IsCancel="True"/>
		</StackPanel>
		
		<StackPanel
			Orientation="Vertical"
			Margin="8"
			>

			<!-- Prompt -->
			<TextBlock
				DockPanel.Dock="Top"
				Text="{Binding Prompt}"
				Margin="8"
				/>

			<!-- Fields -->
			<TextBlock
				Text="API Key:"
				/>
			<TextBox
				Margin="20,0,0,0"
				Text="{Binding APIKey}"
				TextWrapping="Wrap"
				/>
			<TextBlock
				Text="API Secret:"
				/>
			<TextBox
				Margin="20,0,0,0"
				Text="{Binding APISecret}"
				TextWrapping="Wrap"
				/>

			<TextBlock
				Text="Changing API keys will require a restart."
				Margin="8"
				/>

		</StackPanel>
	</DockPanel>
</Window>
