<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFrameworks>$(PrimaryTarget)</TargetFrameworks>
		<RootNamespace>MeasureSchmitt</RootNamespace>
		<AssemblyName>MeasureSchmitt</AssemblyName>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<!-- Assembly properties -->
	<PropertyGroup>
		<Description>For measuring on screen stuff</Description>
		<Copyright>Copyright (c) Rylogic 2021</Copyright>
		<ApplicationIcon>icon.ico</ApplicationIcon>
		<Version>1.0.0</Version>
	</PropertyGroup>

	<!-- Code -->
	<ItemGroup>
		<ApplicationDefinition Include="src\App.xaml" />
	</ItemGroup>

	<!-- Resources -->
	<ItemGroup>
		<Resource Include="res\*.png" />
	</ItemGroup>

	<!-- References -->
	<ItemGroup>
		<ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Core\Rylogic.Core.csproj"/>
		<ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Gui.WPF\Rylogic.Gui.WPF.csproj"/>
		<ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Windows\Rylogic.Windows.csproj"/>
	</ItemGroup>

	<!-- Work Around for System.Drawing.Common types being missing-->
	<Target Name="_addDrawingReference" AfterTargets="ResolveTargetingPackAssets">
		<ItemGroup>
			<Reference Condition="'%(Reference.FileName)' == 'PresentationCore'" Include=
				"%(Reference.RootDir)%(Reference.Directory)System.Drawing.Common.dll;
				%(Reference.RootDir)%(Reference.Directory)System.Private.Windows.GdiPlus.dll;
				%(Reference.RootDir)%(Reference.Directory)System.Private.Windows.Core.dll" />
		</ItemGroup>
	</Target>
</Project>
