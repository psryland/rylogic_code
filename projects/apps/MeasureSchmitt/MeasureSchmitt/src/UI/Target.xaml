<Window
	x:Class="MeasureSchmitt.Target"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Target"
	ShowInTaskbar="False"
	ShowActivated="False"
	WindowStyle="None"
	WindowStartupLocation="Manual"
	AllowsTransparency="True"
	Topmost="True"
	Visibility="Collapsed"
	Background="Transparent"
	BorderThickness="0"
	ResizeMode="NoResize"
	Width="64"
	Height="64"
	>
	<Window.Resources>
		<BitmapImage
			x:Key="target"
			UriSource="/MeasureSchmitt;component/res/target.png" />
	</Window.Resources>
	<Canvas>
		<Ellipse 
			Canvas.Left="8"
			Canvas.Top="8"
			Width="48"
			Height="48"
			StrokeThickness="0.2"
			Stroke="Red"
			Fill="Transparent"
			/>
		<Line
			X1="32"
			X2="32"
			Y1="0"
			Y2="26"
			Stroke="Red"
			StrokeThickness="0.1" />
		<Line
			X1="32"
			X2="32"
			Y1="64"
			Y2="38"
			Stroke="Red"
			StrokeThickness="0.1" />
		<Line
			X1="0"
			X2="26"
			Y1="32"
			Y2="32"
			Stroke="Red"
			StrokeThickness="0.1" />
		<Line
			X1="38"
			X2="64"
			Y1="32"
			Y2="32"
			Stroke="Red"
			StrokeThickness="0.1" />
		<Rectangle
			Canvas.Left="48"
			Canvas.Top="48"
			Width="16"
			Height="16" 
			Fill="Red"
			Opacity="0.25"
			RadiusX="4"
			RadiusY="4"
			/>
	</Canvas>
</Window>
