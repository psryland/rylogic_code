<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rylogic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Header Bar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img class="logo-img" src="~/images/logo.png" alt="Logo" />
                </a>

                <!-- Overflow button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible buttons -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <!-- Software -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="softwareDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Software
                            </a>
                            <div class="dropdown-menu" aria-labelledby="softwareDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/LDraw/LDraw" asp-route-id="1">LDraw</a>
                                <a class="dropdown-item" asp-area="" asp-page="/RyLogViewer/RyLogViewer" asp-route-id="2">RyLogViewer</a>
                                <a class="dropdown-item" asp-area="" asp-page="/TextAligner/TextAligner" asp-route-id="3">Text Aligner</a>
                                <a class="dropdown-item" asp-area="" asp-page="/AllKeys/AllKeys" asp-route-id="4">All Keys</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Page Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 Rylogic. All Rights reserved - <a asp-area="" asp-page="/Privacy">Privacy</a> - <a asp-area="" asp-page="/Contact">Contact</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>