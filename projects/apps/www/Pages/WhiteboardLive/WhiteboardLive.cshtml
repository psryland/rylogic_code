@page
@model rylogic.co.nz.Pages.WhiteboardLive.WhiteboardLiveModel
@{
    ViewData["Title"] = "Whiteboard Live";
}

<div>
    <img class="feature-graphics" src="~/images/whiteboard-live/screen-shot-0.png" alt="Whiteboard Live Feature Graphics">
</div>

<div>
    <h3>Whiteboard Live</h3>
    <p class="one-liner-description">
        An infinite canvas whiteboard for Microsoft Teams with real-time collaboration.
    </p>
</div>

<div class="features">
    <h3>Key Features:</h3>
    <ul>
        <li>Infinite canvas with pan, zoom, and grid snapping</li>
        <li>Shape tools: rectangles, ellipses, diamonds, and text</li>
        <li>Smart connectors with orthogonal, smooth, and straight routing</li>
        <li>Connector labels with draggable attachment points</li>
        <li>Freehand drawing with pressure-sensitive pen tool</li>
        <li>Real-time collaboration with live cursors and room sharing</li>
        <li>Save and load boards locally or to OneDrive</li>
        <li>Export to PNG and SVG</li>
        <li>Available as a Microsoft Teams tab extension or standalone web app</li>
    </ul>
</div>

<div class="download_buttons">
    <a href="https://whiteboard-live.rylogic.co.nz">
        <b>Open Web App</b>
        <p>Launch in browser</p>
    </a>
    <a href="https://github.com/psryland/whiteboard-live/releases/latest/download/whiteboard-live-teams.zip">
        <b>Download Teams App</b>
        <p>Sideload into Microsoft Teams</p>
    </a>
</div>

<div>
    <p>
        For source code, check out the <a href="https://github.com/psryland/whiteboard-live">GitHub Repository</a>
    </p>
</div>
