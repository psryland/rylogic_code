<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<RootNamespace>EDTradeAdvisor.UI</RootNamespace>
		<AssemblyName>EDTradeAdvisor.UI</AssemblyName>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<!-- Assembly properties -->
	<PropertyGroup>
		<Authors>P Ryland</Authors>
		<Company>Rylogic</Company>
		<Description>Elite Dangerous Trade route helper</Description>
		<Copyright>Copyright (c) Rylogic 2020</Copyright>
		<PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
		<ApplicationIcon>icon.ico</ApplicationIcon>
		<Version>1.0.0</Version>
		<FileVersion>1.0.0</FileVersion>
		<AssemblyVersion>1.0.0</AssemblyVersion>
	</PropertyGroup>

	<!-- Code -->
	<ItemGroup>
		<ApplicationDefinition Include="src\App.xaml" />
	</ItemGroup>

	<!-- Resources -->
	<ItemGroup>
		<Resource Include="res\**\*.png" />
	</ItemGroup>

	<!-- References -->
	<ItemGroup>
		<ProjectReference Include="..\EDTradeAdvisor.Core\EDTradeAdvisor.Core.csproj" />
		<ProjectReference Include="../../../rylogic/Rylogic.Core/Rylogic.Core.csproj" />
		<ProjectReference Include="../../../rylogic/Rylogic.Gui.WPF/Rylogic.Gui.WPF.csproj" />
	</ItemGroup>

</Project>
