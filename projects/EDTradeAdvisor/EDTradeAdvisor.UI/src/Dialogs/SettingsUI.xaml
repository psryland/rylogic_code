<Window
	x:Class="EDTradeAdvisor.UI.Dialogs.SettingsUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF;assembly=Rylogic.Gui.WPF"
	mc:Ignorable="d"
	WindowStartupLocation="CenterOwner"
	ResizeMode="CanResizeWithGrip"
	SizeToContent="Height"
	Title="Settings"
	Width="500"
	Height="250"
	>
	<Grid
		Margin="8"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- App data directory -->
		<StackPanel
			Grid.Row="0"
			>
			<TextBlock
				Text="Application Data Directory"
				/>
			<gui2:BrowsePathUI
				Padding="20,3,3,3"
				ToolTip="This is where the database of system, station, commodities, etc is stored, as well as other cached data generated by this tool"
				PathType="SelectDirectory"
				SelectedPath="{Binding DataPath}"
				PathValidation="{Binding DataPath_Validate}"
				/>
		</StackPanel>

		<!-- EDMCdata directory -->
		<StackPanel
			Grid.Row="1"
			>
			<TextBlock
				Text="EDMC Data Directory"
				/>
			<gui2:BrowsePathUI
				Padding="20,3,3,3"
				ToolTip="This is the directory that the Elite Dangerous Market Connector tool writes it's data to. Leave blank if not using EDMC"
				PathType="SelectDirectory"
				SelectedPath="{Binding EDMCDataPath}"
				PathValidation="{Binding EDMCDataPath_Validate}"
				/>
		</StackPanel>

		<!-- Buttons -->
		<StackPanel
			Grid.Row="3"
			>
			<Button
				Content="OK"
				Click="{gui2:MethodBinding Close}"
				VerticalAlignment="Center"
				HorizontalAlignment="Right"
				MinWidth="80"
				Margin="0,8,8,8"
				/>
		</StackPanel>
	</Grid>
</Window>
