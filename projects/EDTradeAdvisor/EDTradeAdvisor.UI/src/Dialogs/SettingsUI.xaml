<Window
	x:Class="EDTradeAdvisor.UI.Dialogs.SettingsUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF;assembly=Rylogic.Gui.WPF"
	xmlns:conv="clr-namespace:Rylogic.Gui.WPF.Converters;assembly=Rylogic.Gui.WPF"
	mc:Ignorable="d"
	WindowStartupLocation="CenterOwner"
	ResizeMode="CanResizeWithGrip"
	SizeToContent="Height"
	Title="Settings"
	Width="550"
	Height="250"
	>
	<Grid
		Margin="8"
		>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- App data directory -->
		<StackPanel
			Grid.Row="0"
			>
			<TextBlock
				Text="Application Data Directory:"
				/>
			<gui2:BrowsePathUI
				Padding="20,3,3,3"
				ToolTip="This is where the database of systems, stations, commodities, etc is stored, as well as other cached data generated by this application"
				PathType="SelectDirectory"
				SelectedPath="{Binding DataPath}"
				/>
		</StackPanel>

		<!-- Journal file directory -->
		<StackPanel
			Grid.Row="1"
			>
			<TextBlock
				Text="Elite Dangerous Journal File Directory:"
				/>
			<DockPanel>
				<Button
					DockPanel.Dock="Right"
					Click="ResetJournalPathToDefault"
					Content="Default"
					MinWidth="60"
					Margin="0,3,3,3"
					/>
				<gui2:BrowsePathUI
					Padding="20,3,3,3"
					ToolTip="This is the directory that Elite Dangerous writes its journal files to. By default, this is '&lt;UserProfile&gt;\Saved Games\Frontier Developments\Elite Dangerous'"
					PathType="SelectDirectory"
					SelectedPath="{Binding JournalFilesDir}"
					/>
			</DockPanel>
		</StackPanel>

		<!-- Use ED Journal file data -->
		<StackPanel
			Grid.Row="2"
			IsEnabled="{Binding JournalFilesPath, Converter={conv:NotNullOrEmpty}}"
			Margin="20,3,3,3"
			>
			<CheckBox
				Content="Update market data when docked"
				IsChecked="{Binding UpdateMarketDataFromJournal}"
				Margin="3"
				/>
			<CheckBox
				Content="Read cargo capacity from ship load-out"
				IsChecked="{Binding ReadCargoCapacityFromLoadout}"
				Margin="3"
				/>
			<CheckBox
				Content="Read maximum jump range from ship load-out"
				IsChecked="{Binding ReadMaxJumpRangeFromLoadout}"
				Margin="3"
				/>
		</StackPanel>
		
		<!-- Buttons -->
		<StackPanel
			Grid.Row="4"
			>
			<Button
				Content="OK"
				Click="HandleClose"
				VerticalAlignment="Center"
				HorizontalAlignment="Right"
				MinWidth="80"
				Margin="0,8,8,8"
				/>
		</StackPanel>
	</Grid>
</Window>
