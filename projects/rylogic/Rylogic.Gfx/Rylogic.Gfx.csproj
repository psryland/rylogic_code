<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Library</OutputType>
		<RootNamespace>Rylogic.Gfx</RootNamespace>
		<UseWpf>True</UseWpf>
	</PropertyGroup>

	<!-- Assembly Properties -->
	<PropertyGroup>
		<ApplicationIcon>icon_128x128.ico</ApplicationIcon>
		<Version>$(RylogicLibraryVersion)</Version>
		<FileVersion>$(RylogicLibraryVersion)</FileVersion>
		<AssemblyVersion>$(RylogicLibraryVersion)</AssemblyVersion>
	</PropertyGroup>

	<!-- Build Options -->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>RELEASE</DefineConstants>
		<Optimize>true</Optimize>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>DEBUG;PR_UNITTESTS</DefineConstants>
		<CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
	</PropertyGroup>

	<!-- Resources -->
	<ItemGroup>
		<Resource Include="res\*.png" />
	</ItemGroup>

	<!-- Native libraries -->
	<ItemGroup>
		<Content Include="Rylogic.Gfx.targets">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<ProjectReference Include="..\Rylogic.Core\Rylogic.Core.csproj" />
		<ProjectReference Include="..\Rylogic.Gui.WPF\Rylogic.Gui.WPF.csproj" />
	</ItemGroup>

	<!-- Post Build -->
	<ItemGroup>
	  <None Update="Rylogic.Gfx.runtimeconfig.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="py $(ScriptPath)RunUnitTests.py $(TargetPath) Rylogic.Core Rylogic.Gui.WPF" />
	</Target>
</Project>