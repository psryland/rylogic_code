<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Library</OutputType>
		<TargetFrameworks>net8.0;net481</TargetFrameworks>
		<RootNamespace>Rylogic.Net</RootNamespace>
	</PropertyGroup>

	<!-- Assembly properties -->
	<PropertyGroup>
		<ApplicationIcon>icon_128x128.ico</ApplicationIcon>
		<Version>$(RylogicLibraryVersion)</Version>
		<FileVersion>$(RylogicLibraryVersion)</FileVersion>
		<AssemblyVersion>$(RylogicLibraryVersion)</AssemblyVersion>
	</PropertyGroup>

	<!-- Build Options -->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>RELEASE</DefineConstants>
		<Optimize>true</Optimize>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>DEBUG;PR_UNITTESTS</DefineConstants>
		<CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
	</PropertyGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" />
		<PackageReference Include="System.Net.Http" />
		<PackageReference Include="System.Net.Security" />
		<PackageReference Include="System.Net.WebSockets.Client" />
		<ProjectReference Include="../Rylogic.Core/Rylogic.Core.csproj" />
	</ItemGroup>

	<!-- Post build -->
	<ItemGroup>
		<None Update="Rylogic.Net.runtimeconfig.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="py $(ScriptPath)RunUnitTests.py $(TargetPath) Rylogic.Core" />
	</Target>

</Project>
