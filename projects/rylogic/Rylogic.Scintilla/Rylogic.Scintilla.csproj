<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Library</OutputType>
		<RootNamespace>Rylogic.Scintilla</RootNamespace>
		<UseWpf>True</UseWpf>
	</PropertyGroup>

	<!-- Assembly Properties -->
	<PropertyGroup>
		<ApplicationIcon>icon_128x128.ico</ApplicationIcon>
		<Version>$(RylogicLibraryVersion)</Version>
	</PropertyGroup>

	<!-- Build Options -->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>RELEASE</DefineConstants>
		<Optimize>true</Optimize>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>DEBUG;PR_UNITTESTS</DefineConstants>
		<CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
	</PropertyGroup>

	<!-- Interface definition generated by scintilla python scripts -->
	<ItemGroup>
		<Compile Include="$(RylogicRoot)sdk\scintilla\include\SciLexer.cs" Link="src\Scintilla\SciLexer.cs" />
		<Compile Include="$(RylogicRoot)sdk\scintilla\include\Scintilla.cs" Link="src\Scintilla\Scintilla.cs" />
	</ItemGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Core\Rylogic.Core.csproj" />
		<ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Gui.WPF\Rylogic.Gui.WPF.csproj" />
	</ItemGroup>

	<!-- Post Build -->
	<ItemGroup>
	  <None Update="Rylogic.Scintilla.runtimeconfig.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="dotnet-script $(ScriptPath)RunUnitTests.csx $(TargetPath) true Rylogic.Core Rylogic.Gui.WPF" />
	</Target>
</Project>