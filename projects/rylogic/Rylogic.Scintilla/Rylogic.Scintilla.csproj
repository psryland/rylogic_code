<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Library</OutputType>
		<TargetFrameworks>net8.0-windows;net481</TargetFrameworks>
		<RootNamespace>Rylogic.Scintilla</RootNamespace>
		<UseWpf>True</UseWpf>
	</PropertyGroup>

	<!-- Assembly Properties -->
	<PropertyGroup>
		<ApplicationIcon>icon_128x128.ico</ApplicationIcon>
		<Version>$(RylogicLibraryVersion)</Version>
		<FileVersion>$(RylogicLibraryVersion)</FileVersion>
		<AssemblyVersion>$(RylogicLibraryVersion)</AssemblyVersion>
	</PropertyGroup>

	<!-- Build Options -->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>RELEASE</DefineConstants>
		<Optimize>true</Optimize>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>DEBUG;PR_UNITTESTS</DefineConstants>
		<CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
	</PropertyGroup>

	<!-- Interface definition generated by scintilla python scripts -->
	<ItemGroup>
		<Compile Include="$(RylogicRoot)sdk\scintilla\include\SciLexer.cs" Link="src\Scintilla\SciLexer.cs" />
		<Compile Include="$(RylogicRoot)sdk\scintilla\include\Scintilla.cs" Link="src\Scintilla\Scintilla.cs" />
	</ItemGroup>

	<!-- Native libraries -->
	<ItemGroup>
		<Content Include="Rylogic.Scintilla.targets">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<ProjectReference Include="../Rylogic.Core/Rylogic.Core.csproj" />
		<ProjectReference Include="../Rylogic.Gui.WPF/Rylogic.Gui.WPF.csproj" />
	</ItemGroup>

	<!-- Post Build -->
	<ItemGroup>
	  <None Update="Rylogic.Scintilla.runtimeconfig.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="py $(ScriptPath)RunUnitTests.py $(TargetPath) Rylogic.Core Rylogic.Gui.WPF" />
	</Target>
</Project>