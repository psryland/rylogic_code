<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
		<OutputType>Library</OutputType>
		<RootNamespace>Rylogic.Windows</RootNamespace>
		<UseWpf>True</UseWpf>
	</PropertyGroup>

	<!-- Assembly Properties -->
	<PropertyGroup>
		<ApplicationIcon>icon_128x128.ico</ApplicationIcon>
		<Version>$(RylogicLibraryVersion)</Version>
	</PropertyGroup>

	<!-- Build Options -->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>RELEASE</DefineConstants>
		<Optimize>true</Optimize>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>DEBUG;PR_UNITTESTS</DefineConstants>
		<CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
	</PropertyGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<PackageReference Include="System.Drawing.Common" />
		<PackageReference Include="System.Drawing.Primitives" />
		<PackageReference Include="System.Reflection.Emit" />
		<PackageReference Include="Microsoft.CSharp" />
		<ProjectReference Include="$(RylogicRoot)projects\rylogic\Rylogic.Core\Rylogic.Core.csproj" />
	</ItemGroup>
	
	<!-- Post Build -->
	<ItemGroup>
		<None Update="Rylogic.Windows.runtimeconfig.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="dotnet-script --cache-path %TEMP%\$(SubDir) $(ScriptPath)RunUnitTests.csx -- $(TargetPath) true Rylogic.Core WindowsBase" />
	</Target>
</Project>