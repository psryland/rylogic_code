	<Import Project="$(PropsPath)tools.props" />
	<Import Project="$(PropsPath)dll.props" />

	<!-- Build options -->
	<ItemDefinitionGroup>
		<ClCompile>
			<PrecompiledHeader>Use</PrecompiledHeader>
