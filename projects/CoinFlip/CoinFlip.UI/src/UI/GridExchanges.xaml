<DataGrid
	x:Class="CoinFlip.UI.GridExchanges"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF;assembly=Rylogic.Gui.WPF"
	xmlns:local="clr-namespace:CoinFlip.UI"
	mc:Ignorable="d" 
	d:DesignHeight="250" d:DesignWidth="400"
	AutoGenerateColumns="False"
	GridLinesVisibility="None"
	>
	<DataGrid.Resources>
		<ResourceDictionary>
			<gui2:ColourToBrush x:Key="ColourToBrush"/>
		</ResourceDictionary>
	</DataGrid.Resources>
	
	<DataGrid.Columns>
		<DataGridTextColumn
			Header="Colour"
			>
			<DataGridTextColumn.CellStyle>
				<Style TargetType="DataGridCell">
					<Setter Property="Background" Value="{Binding Colour, Converter={StaticResource ColourToBrush}}"/>
				</Style>
			</DataGridTextColumn.CellStyle>
		</DataGridTextColumn>
		
		<DataGridTextColumn
			Header="Exchange"
			Binding="{Binding Name}"
			/>
		<DataGridTextColumn
			Header="Status"
			Binding="{Binding Status}"
			/>
	</DataGrid.Columns>
</DataGrid>
