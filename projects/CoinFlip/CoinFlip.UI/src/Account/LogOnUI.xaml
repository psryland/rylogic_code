<Window
	x:Class="CoinFlip.UI.LogOnUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:CoinFlip.UI"
	mc:Ignorable="d"
	WindowStartupLocation="CenterScreen"
	Title="CoinFlip Log-On"
	Icon="{StaticResource Money}"
	Height="220"
	Width="300"
	>
	<StackPanel
		Orientation="Vertical"
		Margin="5"
		>
		<TextBlock TextWrapping="WrapWithOverflow">
			Log on or create a new user account.<LineBreak/>
			Each user has separate exchange API keys.
		</TextBlock>
		<StackPanel Orientation="Vertical">
			<Label Content="Username:"/>
			<TextBox x:Name="m_tb_username" Margin="20,0,10,0"/>
		</StackPanel>
		<StackPanel Orientation="Vertical">
			<Label Content="Password:"/>
			<PasswordBox x:Name="m_tb_password" Margin="20,0,10,0" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,20">
			<Button Content="OK" MinWidth="60" Margin="5" IsDefault="True" x:Name="m_btn_ok" />
			<Button Content="Cancel" MinWidth="60" Margin="5" IsCancel="True"/>
		</StackPanel>
	</StackPanel>
</Window>
