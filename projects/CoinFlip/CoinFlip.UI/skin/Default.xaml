<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:CoinFlip.UI"
	>

	<!-- Brushes -->
	<SolidColorBrush x:Key="ForegroundBrush" Color="{x:Static SystemColors.ControlTextColor}"/>
	<SolidColorBrush x:Key="BackgroundBrush" Color="{x:Static SystemColors.ControlColor}"/>
	<SolidColorBrush x:Key="MenuBackgroundBrush" Color="{x:Static SystemColors.MenuColor}"/>
	<SolidColorBrush x:Key="MenuTextBrush" Color="{x:Static SystemColors.MenuTextColor}"/>
	<SolidColorBrush x:Key="ToolBarBackgroundBrush" Color="{x:Static SystemColors.ControlColor}"/>
	<SolidColorBrush x:Key="ToolBarBorderBrush" Color="{x:Static SystemColors.ControlColor}"/>
	
	<!-- Main Window Brushes -->
	<SolidColorBrush x:Key="MainWindowBorderBrush" Color="{x:Static SystemColors.ControlLightColor}"/>

</ResourceDictionary>