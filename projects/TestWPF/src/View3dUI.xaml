<Window
	x:Class="TestWPF.View3dUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF;assembly=Rylogic.Gui.WPF"
	Title="view3d_ui" Height="415" Width="543"
	>
	<Window.Resources>
		<ResourceDictionary>
			<BitmapImage x:Key ="pencil" UriSource="../res/pencil.png"/>
		</ResourceDictionary>
	</Window.Resources>
	<Grid
		Background="Black"
		>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.1*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Image 
			Grid.Row="0"
			Grid.Column="0"
			Source="{StaticResource pencil}"
			Stretch="Fill"
			/>
		<gui2:View3dControl
			x:Name="m_view0"
			Grid.Row="0"
			Grid.Column="1"
			Stretch="Fill"
			/>
		<!--
		<gui2:View3dControl
			x:Name="m_view1"
			Grid.Row="0"
			Grid.Column="0"
			Stretch="Fill"
			/>
		-->
	</Grid>
</Window>
