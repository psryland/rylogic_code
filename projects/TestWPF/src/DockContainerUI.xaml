<Window 
	x:Class="TestWPF.DockContainerUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF;assembly=Rylogic.Gui.WPF"
	xmlns:local="clr-namespace:TestWPF"
	mc:Ignorable="d"
	Title="DockContainerUI" Height="450" Width="800"
	WindowStartupLocation="Manual"
	Left="-1050"
	Top="500">

	<Window.Resources>
		<!--<ResourceDictionary Source="/Rylogic.Gui.WPF;component/Themes/Generic.xaml"/>-->
	</Window.Resources>
	
	<DockPanel>

		<!-- The DockContainer control -->
		<gui2:DockContainer
			Name="m_dc"
			Visibility="Visible"
			Background="{x:Static SystemColors.ControlDarkBrush}"
			/>
	</DockPanel>
</Window>
