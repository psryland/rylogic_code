<Window
	x:Class="TestWPF.BitArrayUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:gui="http://rylogic.co.nz/guiwpf" xmlns:conv="clr-namespace:Rylogic.Gui.WPF.Converters;assembly=Rylogic.Gui.WPF"
	mc:Ignorable="d"
	Title="BitArrayUI"
	Height="250"
	Width="300">
	<StackPanel
		Orientation="Vertical"
		>
		<gui:BitArray
			Selected="{Binding Bitmask}"
			BitCount="32"
			Background="Transparent"
			CellBackground="LightSteelBlue"
			SelectedBitBrush="Black"
			Orientation="Horizontal"
			StrokeWidth="3"
			LSBIsLeft="False"
			Spacing="100"
			MaxHeight="500"
			x:Name="m_bitarray"
			/>
		<TextBlock
			Text="{Binding Bitmask, StringFormat='Value = 0x{0:X8}'}"
			FontSize="30"
			/>
		<CheckBox
			Content="Single Select"
			IsChecked="{Binding SingleSelect, ElementName=m_bitarray}"
			/>
	</StackPanel>
</Window>
