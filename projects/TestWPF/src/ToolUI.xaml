<Window
	x:Class="TestWPF.ToolUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF;assembly=Rylogic.Gui.WPF"
	xmlns:local="clr-namespace:TestWPF"
	mc:Ignorable="d"
	Title="Pinnable Window"
	Height="250" Width="200"
	WindowStyle="ToolWindow"
	ShowInTaskbar="False"
	>
	<StackPanel>
		<Label Content="I'm a Tool!" Margin="10"/>
		<ToggleButton Content="Toggle Pinned" IsChecked="{Binding PinState.Pinned, Mode=TwoWay}" Padding="8"/>
	</StackPanel>
</Window>
