<Window
	x:Class="BorderOfPeace.UI.SettingsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="BorderOfPeace - Settings"
	Width="360" Height="420"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize"
	>
	<Grid Margin="12">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Label -->
		<TextBlock Grid.Row="0" Text="Color Presets:" FontWeight="SemiBold" Margin="0,0,0,6"/>

		<!-- Preset list -->
		<ListBox
			Grid.Row="1"
			x:Name="m_list_presets"
			Margin="0,0,0,8"
			SelectionMode="Single"
			>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal" Margin="2">
						<Border
							Width="20" Height="20"
							CornerRadius="3"
							BorderBrush="DarkGray"
							BorderThickness="1"
							Margin="0,0,8,0"
							>
							<Border.Background>
								<SolidColorBrush Color="{Binding WpfColor}"/>
							</Border.Background>
						</Border>
						<TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<!-- Buttons: Add / Edit / Remove / Defaults -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
			<Button Content="Add" Width="60" Margin="0,0,6,0" Click="HandleAdd"/>
			<Button Content="Edit" Width="60" Margin="0,0,6,0" Click="HandleEdit"/>
			<Button Content="Remove" Width="60" Margin="0,0,6,0" Click="HandleRemove"/>
			<Button Content="Defaults" Width="70" Click="HandleDefaults"/>
		</StackPanel>

		<!-- OK / Cancel -->
		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="HandleOK"/>
			<Button Content="Cancel" Width="80" IsCancel="True"/>
		</StackPanel>
	</Grid>
</Window>
