<Window
	x:Class="BorderOfPeace.UI.TrayHost"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:gui="clr-namespace:Rylogic.Gui.WPF;assembly=Rylogic.Gui.WPF"
	Title="BorderOfPeace"
	ShowInTaskbar="False"
	WindowStyle="None"
	Visibility="Hidden"
	Width="0" Height="0"
	>
	<Window.Resources>
		<ContextMenu x:Key="TrayMenu" Opened="HandleTrayMenuOpened">
			<!-- Populated dynamically in code -->
		</ContextMenu>
	</Window.Resources>
	<gui:NotificationIcon
		x:Name="m_tray_icon"
		ToolTipText="Border Of Peace"
		IconSource="/icon.ico"
		ContextMenu="{StaticResource TrayMenu}"
		/>
</Window>
