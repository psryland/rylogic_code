<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Rylogic</RootNamespace>
    <ApplicationIcon>SmilingGekko140x110.ico</ApplicationIcon>
    <OutputType>Library</OutputType>
    <StartupObject></StartupObject>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>P Ryland</Authors>
    <Company>Rylogic</Company>
    <Description>A toolbox of extension methods, data structures, and helper classes used in tools created by Rylogic.</Description>
    <Copyright>Copyright (c) Rylogic 2007-2018</Copyright>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageIconUrl></PackageIconUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD2_0;PR_UNITTESTS</DefineConstants>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <OutputPath>bin\Debug\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>bin\Release\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="post_build.py" />
    <None Remove="SmilingGekko140x110.ico" />
    <None Remove="src\maths\vector.tt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="post_build.py" />
    <Content Include="src\maths\vector.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>vector.cs</LastGenOutput>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="SmilingGekko140x110.ico" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="src\container\csv_data.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="src\maths\vector.cs">
      <DependentUpon>vector.tt</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Rylogic.Core.runtimeconfig.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="py $(ProjectDir)post_build.py $(ProjectDir) $(TargetDir) $(PlatformName) $(ConfigurationName)" />
  </Target>

</Project>
