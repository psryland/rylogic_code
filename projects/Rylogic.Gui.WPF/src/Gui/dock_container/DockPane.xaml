<UserControl x:Class="Rylogic.Gui.DockPane"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Rylogic.Gui"
	xmlns:detail="clr-namespace:Rylogic.Gui.DockContainerControls"
	mc:Ignorable="d" 
	d:DesignHeight="450" d:DesignWidth="400">

	<!-- Control Resources -->
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<!-- DockPane Control-->
	<DockPanel>
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Style="{StaticResource DockPaneTitleStyle}">
			<TextBlock Name="m_lbl_title" Style="{StaticResource DockPaneTitleTextStyle}">DockPane Title</TextBlock>
		</StackPanel>
		<StackPanel Name="m_tab_strip" DockPanel.Dock="Bottom" Style="{StaticResource DockPaneTitleStyle}">
			<StackPanel Orientation="Horizontal">
				<detail:TabButton/>
				<detail:TabButton/>
				<detail:TabButton/>
			</StackPanel>
		</StackPanel>
		<Canvas Name="m_content" Background="Blue">
		</Canvas>
	</DockPanel>
</UserControl>
