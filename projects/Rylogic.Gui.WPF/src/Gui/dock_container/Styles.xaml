	<LinearGradientBrush x:Key="DockPaneTitleActiveBackground" StartPoint="0,0" EndPoint="0,1" MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
		<GradientStop Color="{x:Static SystemColors.GradientActiveCaptionColor}" Offset="0.0" />
		<GradientStop Color="{x:Static SystemColors.InactiveCaptionColor}" Offset="1.0" />
	</LinearGradientBrush>

