	<!-- DockPane title styles -->
	<Style x:Key="DockPaneTitleStyle" TargetType="{x:Type StackPanel}">
		<Setter Property="Background" Value="{StaticResource DockPaneTitleActiveBackground}" />
	</Style>
	<Style x:Key="DockPaneTitleTextStyle" TargetType="{x:Type TextBlock}">
		<Setter Property="FontSize" Value="10"/>
		<Setter Property="Margin" Value="1"/>
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<!-- Tab Button Styles -->
	<Style x:Key="DockPaneTabButtonStyle" TargetType="{x:Type detail:TabButton}">
		<Setter Property="Background" Value="{StaticResource DockPaneTitleActiveBackground}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type detail:TabButton}">
					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
	
