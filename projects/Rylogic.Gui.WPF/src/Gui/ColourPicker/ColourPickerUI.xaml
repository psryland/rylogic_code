<Window
	x:Class="Rylogic.Gui.WPF.ColourPickerUI"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF"
	mc:Ignorable="d" 
	d:DesignHeight="200"
	d:DesignWidth="220"
	Title="Select a Colour"
	WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False"
	MinWidth="200"
	MinHeight="100"
	Width="220"
	Height="200"
	>
	<DockPanel>
		<StackPanel
			DockPanel.Dock="Bottom"
			Orientation="Horizontal"
			FlowDirection="RightToLeft"
			Background="{x:Static SystemColors.ControlBrush}"
			Width="{Binding Width, ElementName=m_panel}"
			>
			<Button Content="Cancel" MinWidth="60" Margin="8" IsCancel="True"/>
			<Button Content="OK" MinWidth="60" Margin="8" IsDefault="True" Click="HandleOkButton"/>
		</StackPanel>
		<gui2:ColourWheel
			x:Name="m_colour_wheel"
			Orientation="Horizontal"
			HorizontalAlignment="Center"
            Margin="8"
			/>
	</DockPanel>
</Window>
