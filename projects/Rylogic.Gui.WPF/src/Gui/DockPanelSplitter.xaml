<Control
	x:Class="Rylogic.Gui.WPF.DockPanelSplitter"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:gui2="clr-namespace:Rylogic.Gui.WPF"
	mc:Ignorable="d" 
	d:DesignHeight="20" d:DesignWidth="400"
	>
	<Control.Resources>
		<ResourceDictionary>
			<!-- Default dock panel splitter style-->
			<Style TargetType="{x:Type gui2:DockPanelSplitter}">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type gui2:DockPanelSplitter}">
							<Border
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}">
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</Control.Resources>
</Control>
