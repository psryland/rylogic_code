<UserControl
	x:Class="Rylogic.Gui.WPF.PatternFilter"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:gui2="clr-namespace:Rylogic.Gui.WPF"
	mc:Ignorable="d" 
	d:DesignHeight="28"
	d:DesignWidth="200"
	
	>
	<UserControl.Resources>
		<ResourceDictionary>
			<BitmapImage x:Key="pencil" UriSource="/Rylogic.Gui.WPF;component/res/pencil.png"/>
		</ResourceDictionary>
	</UserControl.Resources>
	
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<!-- Filter text field -->
		<ComboBox
			Grid.Column="0"
			IsEditable="True"
			ItemsSource="{Binding History}"
			Text="{Binding Pattern.Expr, UpdateSourceTrigger=LostFocus}"
			Margin="2"
			/>
		
		<!-- Edit pattern -->
		<Button
			Grid.Column="1"
			Command="{Binding EditPattern}"
			Margin="2"
			>
			<Image Source="{StaticResource pencil}" />
		</Button>
	</Grid>
</UserControl>
