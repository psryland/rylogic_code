<Button
	x:Class="Rylogic.Gui.WPF.DockContainerDetail.CloseButton"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Rylogic.Gui.WPF.DockContainerDetail"
	mc:Ignorable="d" 
	d:DesignHeight="22" d:DesignWidth="22">

	<Button.Resources>
		<ResourceDictionary>
			<BitmapImage x:Key ="dock_close" UriSource="/Rylogic.Gui.WPF;component/res/dock_close.png"/>

			<Style TargetType="{x:Type local:CloseButton}">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type local:CloseButton}">
							<Image Source="{StaticResource dock_close}" Stretch="None"/>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
				<Style.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter Property="Background" Value="{x:Static Brushes.Red}"/>
					</Trigger>
				</Style.Triggers>
			</Style>
		</ResourceDictionary>
	</Button.Resources>
	
	<StackPanel>
		<Image Source="{StaticResource dock_close}"/>
	</StackPanel>
</Button>
