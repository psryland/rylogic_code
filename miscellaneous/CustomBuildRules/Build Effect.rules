<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="Build Effect"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="Build Effect"
			DisplayName="Build Effect"
			CommandLine="fxc [target] [flags] [outfile] &quot;$(InputPath)&quot;"
			Outputs="&quot;[outfile]&quot;" 
			FileExtensions="*.fx"
			>
			<Properties>
				<EnumProperty
					Name="target"
					DisplayName="Target Profile"
					Category="Default"
					Description="Target profile"
					DefaultValue="18"
					>
					<Values>
						<EnumValue
							Value="0"
							DisplayName="vs_1_1"
							Switch="/Tvs_1_1"
						/>
						<EnumValue
							Value="1"
							DisplayName="vs_2_0"
							Switch="/Tvs_2_0"
						/>
						<EnumValue
							Value="2"
							DisplayName="vs_2_a"
							Switch="/Tvs_2_a"
						/>
						<EnumValue
							Value="3"
							DisplayName="vs_2_sw"
							Switch="/Tvs_2_sw"
						/>
						<EnumValue
							Value="4"
							DisplayName="vs_3_0"
							Switch="/Tvs_3_0"
						/>
						<EnumValue
							Value="5"
							DisplayName="vs_3_sw"
							Switch="/Tvs_3_sw"
						/>
						<EnumValue
							Value="6"
							DisplayName="vs_4_0"
							Switch="/Tvs_4_0"
						/>
						<EnumValue
							Value="7"
							DisplayName="vs_4_1"
							Switch="/Tvs_4_1"
						/>
						<EnumValue
							Value="8"
							DisplayName="ps_2_0"
							Switch="/Tps_2_0"
						/>
						<EnumValue
							Value="9"
							DisplayName="ps_2_a"
							Switch="/Tps_2_a"
						/>
						<EnumValue
							Value="10"
							DisplayName="ps_2_b"
							Switch="/Tps_2_b"
						/>
						<EnumValue
							Value="11"
							DisplayName="ps_2_sw"
							Switch="/Tps_2_sw"
						/>
						<EnumValue
							Value="12"
							DisplayName="ps_3_0"
							Switch="/Tps_3_0"
						/>
						<EnumValue
							Value="13"
							DisplayName="ps_3_sw"
							Switch="/Tps_3_sw"
						/>
						<EnumValue
							Value="14"
							DisplayName="ps_4_0"
							Switch="/Tps_4_0"
						/>
						<EnumValue
							Value="15"
							DisplayName="ps_4_1"
							Switch="/Tps_4_1"
						/>
						<EnumValue
							Value="16"
							DisplayName="gs_4_0"
							Switch="/Tgs_4_0"
						/>
						<EnumValue
							Value="17"
							DisplayName="gs_4_1"
							Switch="/Tgs_4_1"
						/>
						<EnumValue
							Value="18"
							DisplayName="fx_2_0"
							Switch="/Tfx_2_0"
						/>
						<EnumValue
							Value="19"
							DisplayName="fx_4_0"
							Switch="/Tfx_4_0"
						/>
						<EnumValue
							Value="20"
							DisplayName="fx_4_1"
							Switch="/Tfx_4_1"
						/>
					</Values>
				</EnumProperty>
				<StringProperty
					Name="flags"
					DisplayName="Compiler flags"
					Category="Default"
					Description="Addition compiler flags"
					DefaultValue="/nologo" 
					Switch="[value]"
				/>
				<StringProperty
					Name="outfile"
					DisplayName="Output File"
					Category="Default"
					Description="The file to output. Leave blank for output to stdout"
					DefaultValue="$(IntDir)\$(InputName).fxo"
					Switch="/Fo&quot;[value]&quot;"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
